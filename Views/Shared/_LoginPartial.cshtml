@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="nav navbar-nav d-inline">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="css-inline">
            <a class="nav-link text-danger font-weight-bold" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="css-inline">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>


    }
    else
    {
        <li class="css-inline">
            <a class="nav-link text-danger font-weight-bold" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="css-inline">
            <a class="nav-link text-danger font-weight-bold" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
